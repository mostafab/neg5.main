div(class="panel nf-panel")
    div(class="collapsable nf-blue nf-panel-heading") 
        .row
            .col-lg-11.col-sm-11.col-md-11.col-xs-11
                label.nf-label Overview
            .col-lg-1.col-sm-1.col-md-1.col-xs-1(ng-if='tournamentContext.owner')
                span.btn.nf-button.nf-blue.btn-md(style='float:right' title='Edit' ng-click='Tournament.editing = true' ng-show='Tournament.editing === false')
                    i.fa.fa-pencil 
                span.btn.nf-button.nf-red.btn-md(style='float:right;' title='Cancel' ng-click='Tournament.editing = false; Tournament.resetOverview()' ng-show='Tournament.editing === true')
                    i.fa.fa-times 

    div(class="panel-body tournament-panel nf-white nf-panel-body")
        form(name='Tournament.editTournamentForm' ng-submit='Tournament.editTournament()' novalidate)
            div(class="row")
                div(class="col-md-12 col-lg-12")
                    .row.nf-margin
                        label(class="label nf-dark-blue nf-label col-xs-4 col-sm-4 col-lg-3") Name 
                        div(class="col-xs-8 col-sm-8 col-lg-8" ng-class='{"form-group" : Tournament.editing === true}')
                            input(
                                type="text",
                                name="tournament_name",
                                class="form-control nf-input input-medium center-text no-border-radius nf-gray",
                                ng-model="Tournament.tournamentInfoCopy.name",
                                ng-show='Tournament.editing === true',
                                required
                            )
                            label(class='white nf-label' ng-show='Tournament.editing === false' ng-bind='tournamentInfo.name')
                    .row.nf-margin
                        label(class="label nf-dark-blue nf-label col-xs-4 col-lg-3") Location
                        div(class="col-xs-8 col-sm-8 col-lg-8" ng-class='{"form-group" : Tournament.editing === true}')
                            input(
                                type="text",
                                name="tournament_location",
                                class="form-control nf-input input-md center-text no-border-radius nf-gray",
                                ng-model='Tournament.tournamentInfoCopy.location',
                                ng-show='Tournament.editing === true'
                            )
                            label(class='white nf-label' ng-show='Tournament.editing === false' ng-bind='tournamentInfo.location')
                    .row.nf-margin
                        label(class="label nf-dark-blue nf-label col-xs-4 col-lg-3") Question Set
                        div(class="col-xs-8 col-sm-8 col-lg-8" ng-class='{"form-group" : Tournament.editing === true}')
                            input(
                                type="text",
                                name="tournament_qset",
                                class="form-control nf-input input-medium center-text no-border-radius nf-gray",
                                ng-model='Tournament.tournamentInfoCopy.questionSet',
                                ng-show='Tournament.editing === true'
                            )
                            label(class='white nf-label' ng-show='Tournament.editing === false' ng-bind='tournamentInfo.questionSet')
                    .row.nf-margin
                        label(class="label nf-dark-blue nf-label col-xs-4 col-lg-3") Date
                        div(class="col-xs-8 col-sm-8 col-lg-8" ng-class='{"form-group" : Tournament.editing === true}')
                            input(
                                    type="date",
                                    name="tournament_date",
                                    class="form-control nf-input input-medium center-text no-border-radius nf-gray",
                                    ng-model='Tournament.tournamentInfoCopy.date',
                                    ng-show='Tournament.editing === true'
                                )
                            label(class='white nf-label' ng-show='Tournament.editing === false' ng-bind='tournamentInfo.date | date:"shortDate"')

                    .row.nf-margin
                        label(class='label nf-dark-blue nf-label col-xs-4 col-lg-3') Hidden
                        div(class="col-xs-8 col-sm-8 col-lg-3" ng-class='{"form-group" : Tournament.editing === true}')
                            input(type='checkbox' class='form-control nf-input input-sm nf-gray' ng-model='Tournament.tournamentInfoCopy.hidden' ng-show='Tournament.editing === true')
                            label(class='white nf-label' ng-show='Tournament.editing === false' ng-bind='tournamentInfo.hidden ? "Yes" : "No"')

                .row.nf-margin
                    div(class="col-md-12 col-lg-12")
                        label(class="label nf-dark-blue nf-label col-xs-4 col-sm-4 col-lg-3") Comments
                        div(class="col-xs-8 col-sm-8 col-lg-9" ng-class='{"form-group" : Tournament.editing === true}')
                            textarea(name="tournament_description" class="form-control nf-input nf-gray" rows="30" ng-model='Tournament.tournamentInfoCopy.comments' ng-show='Tournament.editing === true')
                            label(class='white nf-label preserve-white-space' ng-show='Tournament.editing === false' ng-bind='tournamentInfo.comments')

                div(class="col-md-6" ng-show='Tournament.editing === true')
                    button(type="submit" id='save-tournament-overview' class="btn btn-lg nf-green nf-button") Save Changes
