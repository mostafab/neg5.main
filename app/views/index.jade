extends layout

block titleContent
    title Neg 5 | Quizbowl for the Cloud

block extrastylesheets
    link(rel="stylesheet" href="/css/index.css")
    link(rel="stylesheet" href="/css/tournamentstyle.css")
    link(href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css')

block content

    +navbar

    div(class="jumbotron" style='background-color:transparent;overflow:hidden;')
        div(class='row')
            div(class="col-md-12")
                div(class="row" style='text-align:center')
                    h3 Neg 5 : Quizbowl for the Cloud

        div(style="margin:20px;margin-top:12%")
            div(class="row")
                div(class="col-xs-12")
                    div(class="row")
                        div(class="col-md-1")
                        div(class="col-md-4")
                            div(class='col-md-3')
                            div(class="col-md-7")
                                div(class="row")
                                    img(src="/img/logo.png" class="img-responsive" title='Logo courtesy of u/HyperCamel of r/freedesign')

                        div(class="col-md-7")
                            div(class="col-md-12" id="loginpanel")
                                div(class="row")
                                    form(name="logins" id="loginfo" method="post" action="/auth/local")
                                        div(class="row")
                                            div(class="col-md-2")
                                            div(class="form-group col-md-4")
                                                input(
                                                    type="text",
                                                    name="usrname",
                                                    placeholder="Enter Email"
                                                    class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                    style="background-color:#363B40")
                                            // div(class="col-md-4")
                                        div(class="row")
                                            div(class="col-md-2")
                                            div(class="form-group col-md-4")
                                                input(
                                                    type="password",
                                                    name="pswd"
                                                    placeholder="Enter Password",
                                                    class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                    id="passwordinput"
                                                    style="background-color:#363B40")

                                div(class="row")
                                    div(class="row")
                                        div(class='col-md-1')
                                        div(class="form-group col-md-3")
                                            button(class="btn btn-info btn-sm btn-block",
                                                type="button",
                                                id="login")
                                                | Login
                                        div(class="form-group col-md-3")
                                            button(class="btn btn-warning btn-sm btn-block",
                                                type="button",
                                                id="gotoregister",
                                                )
                                                | Register

                                br
                                br
                                div(class="row")
                                    div(class='col-md-1')
                                    div(class="col-md-11")
                                        div(class="col-md-1")
                                        div()
                                            if errormsg
                                                label(id="errorlabel" style='color:black') #{errormsg}
                                            else
                                                label(id='errorlabel' style='color:black')

                            div(id="registerpanel" style="display:none")

                                div(class="row")
                                    div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
                                        div(class="panel-body")
                                            div(class="row")
                                                div(class="row")
                                                    div(class="col-md-12")
                                                        div(class="form-group" style="color:white;background-color:#363B40")
                                                            li(class="form-control input-lg center-text no-border-radius tournament-info-field" id="l_name" style="background-color:#363B40") Name Must be Between 5 and 25 characters
                                                            li(class="form-control input-lg center-text no-border-radius tournament-info-field" id="l_email" style="background-color:#363B40") Email must be in a valid format (example@domain.com)
                                                            li(class="form-control input-lg center-text no-border-radius tournament-info-field" id="l_password" style="background-color:#363B40") Password must be at least 5 characters long
                                                            li(class="form-control input-lg center-text no-border-radius tournament-info-field" id="l_match" style="background-color:#363B40") Passwords must match

                                    div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
                                        div(class="panel-body")
                                            div(class="row")

                                                form(name="signup" id="signupform")
                                                    div(class="row")
                                                        div(class="col-md-2")
                                                        div(class="form-group col-md-8")
                                                            input(
                                                                type="text",
                                                                name="r_name",
                                                                placeholder="Name"
                                                                class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                                style="background-color:#363B40",
                                                                autocomplete="off")


                                                    div(class="row")
                                                        div(class="col-md-2")
                                                        div(class="form-group col-md-8")
                                                            input(
                                                                type="text",
                                                                name="r_usrname"
                                                                placeholder="Email",
                                                                class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                                style="background-color:#363B40")

                                                    div(class="row")
                                                        div(class="col-md-2")
                                                        div(class="form-group col-md-8")
                                                            input(
                                                                type="password",
                                                                name="r_pswd"
                                                                placeholder="Password",
                                                                class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                                style="background-color:#363B40")

                                                    div(class="row")
                                                        div(class="col-md-2")
                                                        div(class="form-group col-md-8")
                                                            input(
                                                                type="password",
                                                                name="r_pswd_2"
                                                                placeholder="Confirm Password",
                                                                class="form-control input-lg center-text no-border-radius tournament-info-field",
                                                                style="background-color:#363B40")

                                                    div(class="form-group")
                                                        div(class="form-group text-center")
                                                            button(type="button" id="regbutton" class="btn btn-info no-border-radius") Confirm Registration
                                                            button(type="button" id="closereg" class="btn btn-danger no-border-radius") Cancel

                                                    div(class="row")
                                                        div(class="col-md-2")
                                                        div(class="form-group col-md-8 input-lg no-border-radius tournament-info-field" style="text-align:center;background-color:#363B40" id="registererror")

        div(class='row')
            div(class="col-md-12")
                div(class="row" style='text-align:center')
                    h3 Neg 5 is a collaborative quizbowl tournament management system.
                    h3 Easily manage all aspects of your event from the cloud on tournament day!

block scripts
    script(src="/js/welcome-screen.js")
